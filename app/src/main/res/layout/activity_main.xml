<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#D5CFCF"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <include
        android:id="@+id/linechartincludelayout"
        layout="@layout/linechart"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecycleBarchart"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="horizontal"
        android:scrollbars="horizontal">

    </androidx.recyclerview.widget.RecyclerView>



    <androidx.cardview.widget.CardView

        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#ffffff"
        android:elevation="8dp">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editvalue1"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"

                android:background="@drawable/edittextshape"
                android:elevation="3dp"
                android:ems="10"
                android:hint="Please Enter a value"
                android:inputType="number"
                android:textAlignment="center"
                android:textColorHint="#0B0A0A"
                android:textSize="14sp">

            </EditText>


            <EditText
                android:id="@+id/editvalue2"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"

                android:layout_marginRight="8dp"
                android:background="@drawable/edittextshape"
                android:elevation="3dp"
                android:ems="10"
                android:hint="Please Enter a value"
                android:inputType="number"
                android:textAlignment="center"
                android:textColorHint="#070606"
                android:textSize="14sp">

            </EditText>

            <EditText
                android:id="@+id/editvalue3"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextshape"
                android:elevation="3dp"
                android:ems="10"
                android:hint="Please Enter a value"
                android:inputType="number"
                android:textAlignment="center"
                android:textColorHint="#070606"

                android:textSize="14sp">

            </EditText>

            <Button

                android:id="@+id/savebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#D5CFCF"
                android:text="Save"
                android:textColor="#070606"
                android:textSize="18sp"
                android:textStyle="bold">

            </Button>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
